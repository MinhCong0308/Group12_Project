package screen.menu;
import javax.swing.*;
import javax.swing.border.EmptyBorder;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
public class MainMenu extends JFrame {
	private JPanel mainPanel, container;
	private JLabel titleLabel;
	private JButton helpMenuButton, quitButton, sortButton;
	private static final int WIDTH = 1024, HEIGHT = 768;
	
	public MainMenu() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(new Dimension(WIDTH, HEIGHT));
		setLocationRelativeTo(null);
		setTitle("Group 12's sorting visualizer");
		setBackground(new Color(204,166,166));
		initialize();
		setVisible(true);
		
	}
	private void initialize() { // Initialize for the Menu GUI
		int topPadding = 10;
		int leftPadding = 0;
		int rightPadding = 0;
		int bottomPadding = 10;
		
		Container container = getContentPane();
		container.setLayout(new BorderLayout());
		container.setBackground(new Color(204,166,166));
		
		//Adding title Label
		titleLabel = new JLabel("Sorting Visualizer Application"); //Title for Menu GUI
		titleLabel.setHorizontalAlignment(SwingConstants.CENTER);
		titleLabel.setFont(titleLabel.getFont().deriveFont(Font.BOLD, 50f)); // deriveFont(style, size).
		titleLabel.setForeground(new Color(175, 255, 175));
		titleLabel.setBorder(new EmptyBorder(topPadding, leftPadding, bottomPadding, rightPadding)); // change positive of title.
		
		//Adding sorting button
		sortButton = new JButton("Sorting");
		sortButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				//new MainFrame().setVisible(true);
				dispose();
			}
		});
		//Adding Quit button 
		quitButton = new JButton("Quit");
		quitButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				int input = JOptionPane.showConfirmDialog(null, "Do you want to quit our application?", "Quit", 2);
				//0 = quit, 1 = continue using app.
				if(input == 0) {
					System.exit(0);
				}
				
			}
		});
		
		//Setting font, size for button.
		
		
	}
}
